@model AddPartViewModel

@{
    ViewBag.Title = "Add a New Part";
}

<div class="container my-custom-background-color">
    <hr/>
    <h2 class="text-center">@ViewBag.Title</h2>
    <br/>

    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

            <form asp-action="Add" method="post">

                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label-add-edit">Name</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" placeholder="BMW Front Bumper"/>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.Price" class="form-label-add-edit">Price (EUR)</label>
                    <input asp-for="@Model.Price" type="number" class="form-control" aria-required="true" step="1" value="50"/>
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.ImageUrl" class="form-label-add-edit">Image URL</label>
                    <input asp-for="@Model.ImageUrl" class="form-control" placeholder="https://google.com/images/bmwfrontbumper.jpg" />
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label-add-edit">Category</label>
                    <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                </div>


                <br/>
                <div class="mb-3">
                    <input type="submit" value="Add Part" class="btn btn-success w-100 fw-bold"/>
                </div>


            </form>

        </div>

    </div>

    <hr/>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="CommonView"/>
}
