@{
    ViewData["Title"] = "Home Page";
}

@{
    var errorMessage = TempData["ErrorMessage"] as string;
    var successMessage = TempData["SuccessMessage"] as string;

    if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">@successMessage</div>
    }
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>check</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> cars.
        <br />You can also <b>rent</b> the non-rented cars.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and dealers</b> and <b>all rents</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Car" asp-action="All"
       class="btn btn-primary btn-lg">All Cars</a>
    <a asp-area="" asp-controller="Car" asp-action="Add"
       class="btn btn-primary btn-lg">Add Car</a>
    <span> | </span>
    <a asp-area="" asp-controller="Car" asp-action="MyCars"
       class="btn btn-primary btn-lg">My Cars</a>
    <span> | </span>
    <a asp-area="" asp-controller="Car" asp-action="MyFavoriteCars"
       class="btn btn-primary btn-lg">My Favorite Cars</a>

    <hr/>

    <a asp-area="Admin" asp-controller="Rent" asp-action="All"
       class="btn btn-info btn-lg">All Rentals</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-info btn-lg">All Users</a>

    <hr />

    <a asp-area="Admin" asp-controller="User" asp-action="DeleteAllReviews" class="btn btn-warning btn-block">
        Delete all reviews
    </a>

</div>