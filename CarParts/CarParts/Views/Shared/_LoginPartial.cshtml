@using Microsoft.AspNetCore.Identity
@using CarParts.Data.Models
@using CarParts.Services.Data.Interfaces
@using CarParts.Web.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using static CarParts.Common.GlobalConstants.AdminUser
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IUserService UserService

<style>
    .pink-rectangle {
        background-color: pink;
        padding: 10px;
        border-radius: 5px;
    }

    .text-white {
        color: white;
    }
</style>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @if (await UserService.GetUserFullNameById(User.GetId()) is var fullName && fullName != null)
            {
                @if (await UserService.IsUserDealer(User.GetId()) && !User.IsInRole(AdminRoleName))
                {
                    <div class="d-inline p-4 text-bg-primary"><b>[Dealer] @fullName</b></div>
                }
                else if(User.IsInRole(AdminRoleName))
                {
                    <a class="nav-link text-dark"><b>@AdminFirstName</b></a>
                }
                else
                {
                    <div class="d-inline p-4 text-bg-primary"><b>[User/Renter] @fullName</b></div>
                }
            }
            else
            {
               
                @if (await UserService.IsUserDealer(User.GetId()) && !User.IsInRole(AdminRoleName))
                {
                    <br/>
                    <a class="nav-link text-dark"><b>[Dealer]</b> @User.Identity!.Name</a>
                }
                else if(User.IsInRole(AdminRoleName))
                {
                    <a class="nav-link text-dark"><b>@AdminFirstName</b></a>
                }
                else
                {
                    <a class="nav-link text-dark"><b>[User/Renter]</b> @User.Identity!.Name</a>
                }
               
            }
        </li>


        <li class="nav-item">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                @* <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>*@
                <button type="submit" class="nav-link btn btn-danger">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>