                    <a href="@Url.Action("Purchase", "Part", new{id = Audi_S_Line_Brakes.Id})" type="button" class="btn btn-sm btn-outline-secondary">Buy</a>
                </div>
                <small class="text-muted">Brakes</small>
            </div>
        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="card mb-4 box-shadow">
        <span class="border">
            <img class="card-img-top img-fluid" src="@Side_Mirror_C_Class.ImageUrl" alt="Card image cap">
        </span>
        <div class="card-body">
            <p class="card-text">
                @Side_Mirror_C_Class.Description
            </p>
            <div class="d-flex justify-content-between align-items-center">
