                    </button>

                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav">

                            @if (!User.Identity.IsAuthenticated)
                            {
                                @*?XD*@
                            }
                            else if (!User.IsInRole(AdminRoleName))
                            {
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("All", "Car")">
                                        All Cars
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Cars
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Add", "Car")">Add a car</a></li>

                                        <li><a class="dropdown-item" href="@Url.Action("MyFavoriteCars", "Car")">My favorite cars</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("MyCars", "Car")">My cars</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("MyRentedCars", "Car")">My rented cars</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Search", "Car")">Search cars</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="@Url.Action("All", "Part")">
                                        All Parts
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Parts
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Add", "Part")">Add a part</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Search", "Part")">Search part</a></li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("MyFavoriteParts", "Part")">
