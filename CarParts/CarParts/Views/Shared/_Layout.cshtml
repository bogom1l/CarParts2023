@using CarParts.Services.Data.Interfaces
@using CarParts.Web.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using static CarParts.Common.GlobalConstants.AdminUser;

@inject IUserService UserService
@{
