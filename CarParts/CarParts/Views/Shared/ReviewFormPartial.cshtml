@model CarParts.Web.ViewModels.Review.ReviewViewModel


<h2>Add a Review</h2>
<hr />
<form asp-action="AddReview" method="post">
    <input type="hidden" asp-for="CarId" />
    
    <div class="mb-3">
        <label asp-for="@Model.Content" class="form-label-add-edit">Review: </label>
        <textarea asp-for="@Model.Content" class="form-control" aria-required="true" placeholder="Your review..." > </textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="@Model.Rating" class="form-label-add-edit">Rating</label>
        <input asp-for="@Model.Rating" class="form-control" aria-required="true" value="1" />
        <span asp-validation-for="@Model.Rating" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
