@model ReviewViewModel

<h2 class="text-center" style="color:rebeccapurple">Add a Review</h2>

<form asp-action="AddReview" method="post">
    <input type="hidden" asp-for="CarId" />
    
    <div class="mb-3">
        <label asp-for="@Model.Content" class="form-label-add-edit"> <h5>Review:</h5> </label>
        <textarea asp-for="@Model.Content" class="form-control" aria-required="true" placeholder="Your review..." rows="8" > </textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="@Model.Rating" class="form-label-add-edit"><h6>Rating (0-10)</h6></label>
        <input asp-for="@Model.Rating" type="number" class="form-control" aria-required="true" step="0.1" value="10"/>
        <span asp-validation-for="@Model.Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>