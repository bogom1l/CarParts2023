@model ICollection<CarParts.Web.ViewModels.Part.PartViewModel>

@{
    ViewBag.Title = "My Parts";
}

@*SweetAlert CDN*@
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.17/dist/sweetalert2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.17/dist/sweetalert2.min.js"></script>


<style>
    .btn-purple {
        background-color: purple;
        color: white;
        /* Add any additional styling as needed */
    }
</style>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="row d-flex align-items-start">
        @foreach (var part in Model)
        {
            if (part.Owner != User.Identity.Name)
            {
                break;
            }

            string newDescription = string.Join(" ", part.Description
                .Split(new char[] { ' ', '\t', '\r', '\n' }, StringSplitOptions.RemoveEmptyEntries)
                .ToList().Take(5)) + "...";

            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                    <div class="card-body">

                        <img src="@part.ImageUrl" alt="Part Image" class="card-img-top">


                        <h5 class="card-title">@part.Name</h5>
                        <p class="card-text">
                            <span class="fw-bold">Description:</span> @newDescription
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Price:</span> $@part.Price
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Category:</span> @part.CategoryName
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Part" asp-action="Details" asp-route-id="@part.Id" class="btn btn-success btn-block">
                            View Details
                        </a>

                        @if (User.Identity.Name == part.Owner)
                        {
                            <a asp-controller="Part" asp-action="Edit" asp-route-id="@part.Id" class="btn btn-warning btn-block">
                                Edit
                            </a>

                           @* <a asp-controller="Part" asp-action="Delete" asp-route-id="@part.Id" class="btn btn-danger btn-block">
                                Delete
                            </a>*@

                            <a href="#" class="btn btn-danger btn-block delete-part" data-id="@part.Id">
                                Delete
                            </a>
                        }
                        
                        <a asp-controller="Part" asp-action="AddToFavoriteParts" asp-route-id="@part.Id" class="btn btn-purple btn-block">
                            Add to favorite parts
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Handle the click event for the delete buttons
        $('.delete-part').on('click', function (e) {
            e.preventDefault();
            const partId = $(this).data('id');

            // Show SweetAlert confirmation dialog
            Swal.fire({
                title: 'Are you sure?',
                text: 'You are about to delete this part. This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // If user confirms, redirect to the "Delete" action with partId as a parameter
                    window.location.href = `/Part/Delete/${partId}`;
                }
            });
        });
    </script>
}