@model PurchasePartViewModel

@{
    ViewBag.Title = "Purchase Part";
}

<div class="container my-custom-background-color">
    <hr />
    <h2 class="text-center">@ViewBag.Title</h2>

    <div class="row">
        <div class="col-sm-12 offset-lg-3 col-lg-8 offset-xl-2 col-xl-8">

            <form asp-action="Purchase" method="post">

                <div class="card w-100">

                    <div class="card-body">

                        <div class="card-body d-flex justify-content-center">
                            <img src="@Model.ImageUrl" alt="Car Image" class="card-img-top img-fluid">
                        </div>
                       

                        <h3 class="card-title text-center fw-bold">@Model.Name</h3>


                        <p class="mb-1"><span class="fw-bold" style="color:deepskyblue;">Description: </span>@Model.Description</p>

                        <br />

                        <div class="mb-3">
                            <label asp-for="@Model.Price" class="form-label-add-edit fw-bold">Price (EUR) </label>
                            <input asp-for="@Model.Price" class="form-control" aria-required="true" readonly />
                        </div>
                        
           
                        <input type="hidden" asp-for="@Model.PartId" />
                        <input type="hidden" asp-for="@Model.ImageUrl" />
                        <input type="hidden" asp-for="@Model.Name" />
                        <input type="hidden" asp-for="@Model.Description" />



                        <div class="d-flex justify-content-center">

                            <input class="btn btn-warning btn-lg fw-bold" type="submit" value="Purchase!" />

                        </div>

                    </div>

                </div>

            </form>

        </div>

    </div>

    <hr />

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="CommonView" />
}