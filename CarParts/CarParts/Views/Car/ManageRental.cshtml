@model CarParts.Web.ViewModels.Car.RentCarViewModel

@{
    ViewBag.Title = "Manage Rental";
}

<div class="container my-custom-background-color">
    <hr/>
    <h2 class="text-center">@ViewBag.Title</h2>
    <br/>

    <div class="row">
        <div class="col-sm-12 offset-lg-3 col-lg-8 offset-xl-2 col-xl-8">


            <form asp-action="ManageRental" method="post">

                <div class="card w-100">
                    <div class="card-body">
                        <div class="card-body d-flex justify-content-center">
                            <img src="@Model.ImageUrl" alt="Car Image" class="card-img-top img-fluid">
                        </div>

                        <h3 class="card-title text-center fw-bold">@Model.Make @Model.Model</h3>

                        <p class="mb-1"><span class="fw-bold" style="color:darkolivegreen;">Year: </span>@Model.Year</p>
                        <p class="mb-1"><span class="fw-bold" style="color:darkolivegreen;">Description: </span>@Model.Description</p>
                        <p class="mb-1"><span class="fw-bold" style="color:darkolivegreen;">Price: </span>@Model.Price</p>
                        <p class="mb-1"><span class="fw-bold" style="color:darkolivegreen;">Color: </span>@Model.Color</p>
                        <p class="mb-1"><span class="fw-bold" style="color:darkolivegreen;">Renter Name: </span>@Model.RenterName</p>

                        <br/>

                        <input type="hidden" asp-for="@Model.Make"/>
                        <input type="hidden" asp-for="@Model.Model"/>
                        <input type="hidden" asp-for="@Model.Year"/>
                        <input type="hidden" asp-for="@Model.Description"/>
                        <input type="hidden" asp-for="@Model.Price"/>
                        <input type="hidden" asp-for="@Model.Color"/>
                        <input type="hidden" asp-for="@Model.ImageUrl"/>
                        <input type="hidden" asp-for="@Model.Id"/>
                        <input type="hidden" asp-for="@Model.RenterName"/>


                        <div class="mb-3">
                            <label asp-for="@Model.RentPrice" class="form-label-add-edit fw-bold">Rent Price / day (EUR)</label>
                            <input asp-for="@Model.RentPrice" class="form-control" aria-required="true" readonly/>
                            <span asp-validation-for="@Model.RentPrice" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.RentalStartDate" class="form-label-add-edit fw-bold">Rental Start Date</label>
                            <input asp-for="@Model.RentalStartDate" class="form-control" aria-required="true" readonly/>
                            <span asp-validation-for="@Model.RentalStartDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.RentalEndDate" class="form-label-add-edit fw-bold">Rental End Date</label>
                            <input asp-for="@Model.RentalEndDate" class="form-control" aria-required="true"/>
                            <span asp-validation-for="@Model.RentalEndDate" class="text-danger"></span>
                        </div>
                        
                        <div class="text-center">
                            <h4 class="text-warning">Warning!</h4><h5 class="text-warning"> You will be taxed @TaxPriceForAdjustingRental euro for the rental change,
                                and @TaxPriceForCancelingRental euro if you cancel the rental.</h5>
                        </div>

                        <div class="mb-3 text-center">
                            <input class="btn btn-success btn-lg fw-bold" type="submit" value="Update Rental"/>
                        </div>
                
                    </div>
                </div>
            </form>

            <div class="d-flex justify-content-end">
                <form asp-action="EndRental" method="post" id="endRentalForm">
                    <input type="hidden" asp-for="@Model.Id" />
                    <button type="submit" class="btn btn-danger btn-lg fw-bold" id="endRentalButton">End Rental</button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <partial name="CommonView"/>
}