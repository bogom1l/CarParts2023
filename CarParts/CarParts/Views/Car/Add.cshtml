@model AddCarViewModel

@{
    ViewBag.Title = "Add a New Car";
}

<div class="container">
    <h2 class="text-center">@ViewBag.Title</h2>
    <hr />

    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form asp-action="Add" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Make" class="form-label-add-edit">Make</label>
                    <input asp-for="@Model.Make" class="form-control" aria-required="true" value="BMW" />
                    <span asp-validation-for="@Model.Make" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Model" class="form-label-add-edit">Model</label>
                    <input asp-for="@Model.Model" class="form-control" aria-required="true" value="E60" />
                    <span asp-validation-for="@Model.Model" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Year" class="form-label-add-edit">Year</label>
                    <input asp-for="@Model.Year" class="form-control" aria-required="true" value="2003" />
                    <span asp-validation-for="@Model.Year" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5" ></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Price" class="form-label-add-edit">Price</label>
                    <input asp-for="@Model.Price" class="form-control" aria-required="true" step="0.01" value="9000" />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Color" class="form-label-add-edit">Color</label>
                    <input asp-for="@Model.Color" class="form-control" aria-required="true" value="red" />
                    <span asp-validation-for="@Model.Color" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.EngineSize" class="form-label-add-edit">Engine Size</label>
                    <input asp-for="@Model.EngineSize" class="form-control" aria-required="true" step="0.01" value="2993" />
                    <span asp-validation-for="@Model.EngineSize" class="text-danger"></span>
                </div>
                
                

               @* <div class="mb-3">
                    <label asp-for="@Model.FuelType" class="form-label-add-edit">Fuel Type</label>
                    <input asp-for="@Model.FuelType" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.FuelType" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Transmission" class="form-label-add-edit">Transmission</label>
                    <input asp-for="@Model.Transmission" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Transmission" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Category" class="form-label-add-edit">Category</label>
                    <input asp-for="@Model.Category" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Category" class="text-danger"></span>
                </div>
                *@


                <div class="mb-3">
                    <label asp-for="@Model.FuelTypeId" class="form-label-add-edit">Fuel Type</label>
                    <select asp-for="@Model.FuelTypeId" class="form-control" aria-required="true">
                        @foreach (var fuelType in Model.FuelTypes)
                        {
                            <option value="@fuelType.Id">@fuelType.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.FuelTypeId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.TransmissionId" class="form-label-add-edit">Transmission</label>
                    <select asp-for="@Model.TransmissionId" class="form-control" aria-required="true">
                        @foreach (var transmission in Model.Transmissions)
                        {
                            <option value="@transmission.Id">@transmission.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.TransmissionId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label-add-edit">Category</label>
                    <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                </div>
                


                <div class="mb-3">
                    <label asp-for="@Model.Weight" class="form-label-add-edit">Weight</label>
                    <input asp-for="@Model.Weight" class="form-control" aria-required="true" step="0.01" value="1595" />
                    <span asp-validation-for="@Model.Weight" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.TopSpeed" class="form-label-add-edit">Top Speed</label>
                    <input asp-for="@Model.TopSpeed" class="form-control" aria-required="true" step="0.01" value="250" />
                    <span asp-validation-for="@Model.TopSpeed" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Acceleration" class="form-label-add-edit">Acceleration</label>
                    <input asp-for="@Model.Acceleration" class="form-control" aria-required="true" step="0.01" value="6.8" />
                    <span asp-validation-for="@Model.Acceleration" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Horsepower" class="form-label-add-edit">Horsepower</label>
                    <input asp-for="@Model.Horsepower" class="form-control" aria-required="true" step="0.01" value="231" />
                    <span asp-validation-for="@Model.Horsepower" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Torque" class="form-label-add-edit">Torque</label>
                    <input asp-for="@Model.Torque" class="form-control" aria-required="true" step="0.01" value="500" />
                    <span asp-validation-for="@Model.Torque" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.FuelConsumption" class="form-label-add-edit">Fuel Consumption</label>
                    <input asp-for="@Model.FuelConsumption" class="form-control" aria-required="true" step="0.01" value="9.2" />
                    <span asp-validation-for="@Model.FuelConsumption" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <input type="submit" value="Add Car" class="btn btn-success w-100" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
