@model ICollection<CarParts.Web.ViewModels.Car.RentCarViewModel>

@{
    ViewBag.Title = "My Rented Cars";
}


@{
    var errorMessage = TempData["ErrorMessage"] as string;
    var successMessage = TempData["SuccessMessage"] as string;

    if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">@successMessage</div>
    }
}


<style>
    /* Add any custom styling as needed */
</style>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="row d-flex align-items-start">
        
        @if (!Model.Any())
        {
            <h2>You don't have any current rented cars</h2>
        }

        @foreach (var car in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <img src="@car.ImageUrl" alt="Car Image" class="card-img-top">
                        <h5 class="card-title">@car.Make @car.Model</h5>
                        <p class="card-text">
                            <span class="fw-bold">Year:</span> @car.Year
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Price:</span> $@car.Price
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Color:</span> @car.Color
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Description:</span> @car.Description
                        </p>

                        @if (car.RentalStartDate != null)
                        {
                            <p class="card-text">Rental Start Date: @car.RentalStartDate.Value.ToString("dd-MM-yyyy")</p>
                        }
                        @if (car.RentalEndDate != null)
                        {
                            <p class="card-text">Rental End Date: @car.RentalEndDate.Value.ToString("dd-MM-yyyy")</p>
                        }
                        <p class="card-text">
                            <span class="fw-bold">Renter Name (delete me from view):</span> @car.RenterName
                        </p>

                        <p class="card-text">
                            <span class="fw-bold">Car Id (delete me from view):</span> @car.Id
                        </p>
                        
                        <p class="card-text">
                            <span class="fw-bold">Rent Price:</span> @car.RentPrice eur (per day)
                        </p>


                    </div>
                    <div class="card-footer">


                        <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id" class="btn btn-success btn-block">
                            Details
                        </a>

                        <a asp-controller="Car" asp-action="ManageRental" asp-route-id="@car.Id" class="btn btn-info btn-block">
                            Manage Rental
                        </a>


                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}