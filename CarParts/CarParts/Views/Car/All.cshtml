@model ICollection<CarViewModel>

@{
    ViewBag.Title = "All Cars";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card">
                    <div class="image-container">
                        <img src="@car.ImageUrl" alt="Car Image" class="card-img-top">
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">@car.Make @car.Model</h5>
                        <p class="card-text">
                            <span class="fw-bold">Year:</span> @car.Year
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Price:</span> $@car.Price
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Fuel Type:</span> @car.FuelType
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Category:</span> @car.Category
                        </p>
                        <p class="card-text">
                            <span class="fw-bold">Horsepower:</span> @car.Horsepower
                        </p>
                    </div>

                    <div class="card-footer">
                        <a asp-controller="Car" asp-action="Details" asp-route-id="@car.CarId" class="btn btn-info btn-block">
                            View Details
                        </a>

                        @if (User.Identity.Name == car.Owner)
                        {
                            <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.CarId" class="btn btn-warning btn-block">
                                Edit
                            </a>
                            <a asp-controller="Car" asp-action="Delete" asp-route-id="@car.CarId" class="btn btn-danger btn-block">
                                Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .image-container {
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10px 10px 0 0;
        overflow: hidden;
    }

        .image-container img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-size: 1.4rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-text {
        color: #555;
    }

    .card-footer {
        padding: 15px;
        background-color: #f9f9f9;
        border-radius: 0 0 10px 10px;
    }

    .btn-block {
        display: block;
        width: 100%;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
