@model ICollection<CarParts.Web.ViewModels.Car.CarViewModel>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Dashboard</h1>
<br />

<style>

    


    .btn-group-vertical {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-left: 10px;
    }

        

        .btn-group-vertical .btn-primary {
            background-color: #1E90FF;
            color: #fff;
        }

        .btn-group-vertical .btn-secondary {
            background-color: #f0f0f0;
            color: #000;
        }

        .btn-group-vertical .btn-colored {
            background-color: #1e20ff;
            color: #fff;
        }

        .btn-group-vertical .btn-contactus {
            background-color: #013220;
            color: #fff;
        }

    

</style>


<div class="container-fluid">
    <div class="row">
        <!-- Left Part: Vertical Button Group -->
        <div class="col-md-3">
            <div class="btn-group-vertical">
                <a href="@Url.Action("All", "Car")" class="btn btn-primary">View All Cars</a>
                <a href="@Url.Action("MyCars", "Car")" class="btn btn-secondary">My Cars</a>
                <a href="@Url.Action("MyFavoriteCars", "Car")" class="btn btn-secondary">My favorite cars</a>
                <a href="@Url.Action("Add", "Car")" class="btn btn-secondary">Add Car</a>
                <br />
                <a href="@Url.Action("Search", "Car")" class="btn btn-colored">Search Cars</a>

                <br />

                <a href="@Url.Action("All", "Part")" class="btn btn-primary">View All Parts</a>
                <a href="@Url.Action("MyParts", "Part")" class="btn btn-secondary">My Parts</a>
                <a href="@Url.Action("MyFavoriteParts", "Part")" class="btn btn-secondary">My favorite parts</a>
                <a href="@Url.Action("Add", "Part")" class="btn btn-secondary">Add Part</a>
                <br />
                <a href="@Url.Action("Search", "Part")" class="btn btn-colored">Search Parts</a>

                <br />

                <a href="@Url.Action("ContactUs", "Home")" class="btn btn-contactus">Contact Us</a>
                <a href="@Url.Action("Reviews", "Home")" class="btn btn-contactus">Reviews</a>


            </div>
        </div>


        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="card-deck">
                        <div class="card">
                            @*<img class="card-img-top pb-5" src="/img/MotorDashboard.jpg" alt="Card image cap">*@
                            <div class="card-body">
                                <h5 class="card-title text-center">Motorcycles</h5>
                                <p class="card-text pt-2">Section reserved for admins, here it is possible to modify every single component of the bike and approve it.</p>
                                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-primary md-2 offset-4">Motorcycles</a>
                            </div>
                        </div>
                    </div>
               
                    <div class="col-md-6">
                        <div class="card">
                            @*  <img class="card-img-top pb-5" src="/img/MotorDealers.jpg" alt="Card image cap">*@
                            <br/>
                            <div class="card-body">
                                <h5 class="card-title text-xl-center pt-2">Dealers</h5>
                                <p class="card-text pt-2">Dedicated section for the management of each individual dealer. Accout modification, cancellation, modification.</p>
                                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-primary md-2 offset-4">Dealers</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Card 3</h5>
                    <p class="card-text">This is the content of Card 3.</p>
                </div>
            </div>
        </div>
    </div>

</div>




