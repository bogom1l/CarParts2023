@model IEnumerable<RentInfoViewModel>
@{
    ViewBag.Title = "All Rentals";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    @foreach (var rent in Model)
    {
        <div class="card mb-3 col-4">
            <img class="card-img-top" src="@rent.CarImageUrl" alt="Car Image">
            <div class="card-body text-center">
                <h4>@rent.CarMake @rent.CarModel</h4>
                <h6>Dealer: @rent.DealerFullName <b>(@rent.DealerEmail)</b></h6>
                <h6>Rented By: <b>@rent.RenterFullName (@rent.RenterEmail)</b></h6>
            </div>
        </div>
    }
</div>