@using CarParts.Services.Data.Interfaces
@using CarParts.Web.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using static CarParts.Common.GlobalConstants.AdminUser;

@inject IUserService UserService
@{
    //string id = this.User.FindFirst(ClaimTypes.NameIdentifier).Value;
    //string id2 = await UserService.GetUserIdByEmail(this.User.Identity.Name);
    string id = this.User.GetId();
    double balance = await UserService.GetUserBalanceById(id);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarParts2023</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarParts2023.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Index">Home Page</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">
                             <b>ADMIN AREA</b>
                        </a>

                        <a asp-area="" asp-controller="User" asp-action="AddMoney" class="btn btn-secondary btn-lg">
                            Add 100 euro
                        </a>

                        <a asp-area="" asp-controller="User" asp-action="ResetMoney" class="btn btn-secondary btn-lg">
                            Reset money
                        </a>
                    </ul>

                </div>

                
                <a class="nav-link active" aria-current="page">
                    Balance: @balance eur
                </a>

                <span class="navbar-text">
                    <partial name="_LoginPartial" />
                </span>

            </div>

        </nav>





    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CarParts2023 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>